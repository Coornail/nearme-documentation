<!DOCTYPE html>
<html lang="en">
<head>
  {% include 'layouts/head/head' -%}
  {% include 'layouts/lib/context-variables' -%}
  {% include 'layouts/lib/category-helpers' -%}
</head>
<body>
	<div class="wrapper">
    {% include 'layouts/header' %}

		<div class="main main--mt">
      <div class="section-search">
				<div class="container">
					<div class="form-search form-search--alt">
						<form action="/search" method="get">
							<div class="form__controls">
								<input type="text" name="query" class="form-control" placeholder="Search documentationâ€¦" value="{{ context.params.query }}" />

								<button class="form-btn">
                  <svg width="24" height="24"><use xlink:href="#search"></use></svg>
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>

      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <div class="sidebar">
							<div class="sidebar__title">
                {% if context.exports.category.name %}
                  {% capture icon_path %}svg/{{ context.exports.category.slug }}{% endcapture %}
                  {% include icon_path, width: '32px', height: '32px' %}
                  <h4>{{ context.exports.category.name }}</h4>
                {% endif %}
							</div>

              {% include 'layouts/nav' %}
						</div>
          </div>

          <div class="col-sm-9">
            <div class="content">
              {% include 'layouts/content/flash-messages' %}
              {% include 'layouts/content/breadcrumbs', category: context.exports.category %}
              <div class="row">
                <div class="col{% if context.page.metadata.toc == true %}-8{% endif %} content__main">
                  {% if context.page.metadata.title %}
                    <h1>{{ context.page.metadata.title }}</h1>
                  {% endif %}

                  {% unless context.page.metadata.contributors == false %}
                    {% include 'layouts/content/contributors' %}
                  {% endunless %}

                  {{ content_for_layout }}

                  {% unless context.page.metadata.feedback == false %}
                    {% include 'layouts/content/feedback' %}
                  {% endunless %}
                </div>

                {% if context.page.metadata.toc == true %}
                  <div class="col-4" data-autotoc></div>
                {% endif %}
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    {% include 'layouts/content/questions', content: context.page.metadata.questions %}

    {% include 'layouts/footer' %}
	</div>
  {%- include 'layouts/body/icons' -%}

  {% include 'layouts/body/javascripts_bottom' %}
</body>
</html>
